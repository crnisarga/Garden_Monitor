    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/light_green"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottomRelativeLayout"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:paddingEnd="5dp"
            android:layout_height="wrap_content"
            android:text="Wrong, Try again!"
            android:padding="5dp"
            android:textAllCaps="false"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:layout_toStartOf="@id/btnAddPlant"
            android:layout_marginEnd="15dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:id="@+id/btnTryAgain"
            android:layout_marginBottom="5dp"
            app:icon="@drawable/ic_baseline_highlight_off_24" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct, Add Plant"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:id="@+id/btnAddPlant"
            android:layout_marginTop="5dp"
            app:icon="@drawable/ic_baseline_check_circle_outline_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:padding="5dp" />

    </RelativeLayout>





</RelativeLayout>