<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WikiPlantProfileActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/nestedScroll"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/image_layout"
                android:layout_alignParentTop="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/sample_plant"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    android:id="@+id/plantImage"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="@color/grey"
                    android:id="@+id/backButton"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:padding="6dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:paddingStart="13dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@id/image_layout"
                android:backgroundTint="@color/light_green"
                android:layout_marginTop="-10dp"
                android:background="@drawable/top_rounded_circle"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hawaiian Hibiscus"
                    android:textStyle="bold"
                    android:textColor="@color/greenVar2"
                    android:textSize="28sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtPlantCommonName"
                    android:layout_marginStart="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hibiscus rosa-sinensis"
                    android:layout_below="@id/txtPlantCommonName"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:id="@+id/txtPlantScientificName"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <!--Accuracy Card-->
                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="60dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:id="@+id/accuracyCard"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/pureGrey"
                    android:layout_below="@id/txtPlantScientificName">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/accuracy_icon"
                            android:layout_centerVertical="true"
                            android:id="@+id/icon1"
                            app:tint="@color/greenVar2"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACCURACY"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/greenVar2"
                            android:textSize="15sp"
                            android:id="@+id/txtTitle1"
                            android:layout_marginStart="13dp"
                            android:layout_alignParentEnd="true"
                            android:layout_toEndOf="@id/icon1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtTitle1"
                            android:layout_toEndOf="@id/icon1"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp"
                            android:id="@+id/txtAccuracy"
                            android:layout_marginStart="13dp"
                            android:text="85% " />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!--Temperature Card-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/temperatureCard"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPlantScientificName"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="51dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/accuracyCard"
                    app:cardBackgroundColor="@color/pureGrey"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/temperature_icon"
                            app:tint="@color/greenVar2" />

                        <TextView
                            android:id="@+id/txtTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="8dp"
                            android:layout_toEndOf="@id/icon"
                            android:text="TEMPERATURE"
                            android:textColor="@color/greenVar2"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtTitle2"
                            android:layout_marginStart="13dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toEndOf="@id/icon"
                            android:text="15-24 Â°C"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="60dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:id="@+id/waterCard"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/pureGrey"
                    android:layout_below="@id/accuracyCard">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/drop_icon"
                            android:layout_centerVertical="true"
                            android:id="@+id/icon3"
                            app:tint="@color/greenVar2"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WATER"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/greenVar2"
                            android:textSize="15sp"
                            android:id="@+id/txtTitle3"
                            android:layout_marginStart="13dp"
                            android:layout_alignParentEnd="true"
                            android:layout_toEndOf="@id/icon3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtTitle3"
                            android:layout_toEndOf="@id/icon3"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp"
                            android:layout_marginStart="13dp"
                            android:text="250 ml " />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!--Light Card-->
                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    android:layout_marginEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="13dp"
                    android:id="@+id/lightCard"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/pureGrey"
                    android:layout_below="@id/temperatureCard">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/sun_icon"
                            android:layout_centerVertical="true"
                            android:id="@+id/icon4"
                            app:tint="@color/greenVar2"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIGHT"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/greenVar2"
                            android:textSize="15sp"
                            android:id="@+id/txtTitle4"
                            android:layout_marginStart="13dp"
                            android:layout_alignParentEnd="true"
                            android:layout_toEndOf="@id/icon4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtTitle4"
                            android:layout_toEndOf="@id/icon4"
                            android:textSize="15sp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="13dp"
                            android:text="Low" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:layout_below="@id/waterCard"
                    android:layout_marginStart="15dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/txtPlantDescription"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Azadirachta indica, commonly known as neem, nimtree or Indian lilac, is a tree in the mahogany family Meliaceae. It is one of two species in the genus Azadirachta, and is native to the Indian subcontinent and most of the countries in Africa. It is typically grown in tropical and semi-tropical regions. Neem trees also grow on islands in southern Iran. Its fruits and seeds are the source of neem oil."
                    tools:targetApi="o" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

