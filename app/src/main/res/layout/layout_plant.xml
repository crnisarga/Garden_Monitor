<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="165dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    android:layout_marginEnd="11dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/topLayout"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:id="@+id/plantImage"
                android:src="@drawable/sample_plant" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:layout_below="@id/topLayout"
        android:background="@drawable/top_rounded_circle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25-05-2021"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            android:id="@+id/plantDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:id="@+id/txtPlantName"
            android:layout_marginTop="3dp"
            android:layout_below="@id/plantDate"
            android:textColor="@color/greenVar2"
            android:text="Azadiracta Indica" />

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>