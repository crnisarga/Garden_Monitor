<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".activities.OTPActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP"
        android:textSize="26sp"
        android:id="@+id/txtOTP"
        android:textStyle="bold"
        android:textColor="@color/greenVar2"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@id/txtOTP"
        android:backgroundTint="@color/grey"
        android:layout_marginEnd="15dp"
        android:padding="22dp"
        android:src="@drawable/ic_baseline_lock_24"
        android:tint="@color/greenVar2"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:defaultFocusHighlightEnabled="true"
        android:background="@drawable/circle_bg"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="260dp"
        android:layout_height="4dp"
        android:layout_marginStart="15dp"
        android:id="@+id/viewDivider"
        android:layout_marginTop="35dp"
        android:background="@color/grey"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtOTP" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtDescOTP"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewDivider"
        android:layout_marginTop="40dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:text="Please enter the OTP sent to" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 9381384234"
        android:layout_below="@id/txtDescOTP"
        android:layout_marginTop="10dp"
        android:textColor="@color/greenVar2"
        android:id="@+id/txtPhoneNumber"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:textSize="22sp" />

    <com.mukesh.OtpView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:inputType="numberPassword"
        android:enabled="true"
        android:layout_alignParentStart="true"
        app:OtpHideLineWhenFilled="true"
        app:OtpMaskingChar="sai"
        android:itemBackground="@color/light_green"
        android:layout_marginStart="15dp"
        android:textColor="@color/greenVar2"
        app:OtpItemCount="6"
        android:cursorVisible="true"
        app:OtpCursorColor="@color/greenVar2"
        android:layout_below="@id/txtDescOTP"
        android:hint="Â·"
        app:OtpLineColor="@color/greenVar2"
        app:OtpViewType="line"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="resend otp"
        android:textAllCaps="true"
        android:layout_marginStart="15dp"
        android:textColor="@color/green"
        android:layout_below="@id/otp_view"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_marginBottom="-5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="verify"
        android:id="@+id/btnNext"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="17dp" />


</RelativeLayout>