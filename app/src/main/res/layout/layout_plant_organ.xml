<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="170dp"
            android:background="@drawable/rounded_bg"
            android:id="@+id/placeHolderLayout"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:backgroundTint="@color/green"
            android:layout_height="185dp">

            <ImageView
                android:layout_width="90dp"
                android:src="@drawable/ic_baseline_add_a_photo_24"
                app:tint="@color/greenVar2"
                android:padding="2dp"
                android:layout_marginTop="45dp"
                android:layout_height="70dp"
                android:id="@+id/cam"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cam"
                android:id="@+id/txtAddPlantOrgan"
                android:layout_centerHorizontal="true"
                android:text="Add Plant Organ"
                android:layout_marginTop="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/plantOrganLayout"
            android:background="@color/greenVar2"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView"
                android:src="@drawable/icon"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/imageView"
                android:id="@+id/organIcon"
                android:layout_marginTop="6dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/leaf_icon"
                android:layout_marginEnd="10dp"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Leaf"
                android:id="@+id/txtOrganName"
                android:layout_toEndOf="@+id/organIcon"
                android:layout_below="@id/imageView"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>