<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    app:cardElevation="10dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="180dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/rounded_bg"
            android:id="@+id/placeHolderLayout"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:backgroundTint="@color/green"
            android:layout_height="180dp">

            <ImageView
                android:layout_width="90dp"
                android:src="@drawable/ic_baseline_add_a_photo_24"
                app:tint="@color/greenVar2"
                android:padding="2dp"
                android:layout_marginTop="45dp"
                android:layout_height="70dp"
                android:id="@+id/cam"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cam"
                android:id="@+id/txtAddPlantOrgan"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="Add Plant Organ"
                android:layout_marginTop="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="visible"
            android:id="@+id/plantOrganLayout"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:background="@drawable/green_transparent" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/organIcon"
                        android:contentDescription="@string/app_name"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/leaf_icon"
                        android:layout_marginEnd="10dp"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Leaf"
                        android:id="@+id/txtOrganName"
                        android:layout_toEndOf="@+id/organIcon"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/deleteIcon"
                        android:contentDescription="@string/app_name"
                        android:layout_marginTop="6dp"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_baseline_delete_outline_24"
                        app:tint="@color/white" />

            </RelativeLayout>

        </RelativeLayout>

</com.google.android.material.card.MaterialCardView>